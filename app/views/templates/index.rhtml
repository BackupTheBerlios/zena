<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
    "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" lang="en" xml:lang="en">
<head>
  <title><%= @node.v_title %></title>
  <meta http-equiv="Content-type" content="text/html; charset=utf-8" />
  <meta http-equiv="Content-Language" content="fr-fr" />
  <%= stylesheet_link_tag( 'zen' ) %>
  <%= javascript_include_tag 'prototype', 'effects', 'zena' %>
  <%= uses_calendar %>
</head>

<body <%= @su %>>
  <div id="navbar">
    <%= lang_links %>
    <%= path_links   %>
    <%= login_link   %>
    <%= visitor_link %>
  </div>

  <%= show_menu      %>
  <%= logo Time.now  %>
  <%= flash_messages %>

  <div id='left'>
    <div id='tinycal'><%= calendar(:find=>:news, :size=>:tiny) %></div>
    <% hot = @node.hot ? @node.hot : @node %>
    <div class='header'>
      <h1 class='s<%= @node.v_status %>'>
        <ul class='node_actions'><%= edit_button(:all) %></ul><br/>
        <%= show_title(@node) %>
      </h1>
      <div class='subtitle'><%= author(:small) %></div>
    </div>
    <div id='drive' style='display:none;'></div>
    <div class='content'>
      <%= @node[:v_summary] ? show(@node, :v_summary) : show(@node, :v_text) %>
    </div>
  </div>
  <div id='main'>
    <div id='content'>
      <div id='largecal' style='display:none;'></div>
      
      <div class='header'>
        <h1 class='s<%= @node.v_status %>'>
          <ul class='node_actions'><%= edit_button(:all) %></ul><br/>
          <%= show_title(@node) %>
        </h1>
        <div class='subtitle'><%= author(:small) %></div>
      </div>
      <div id='drive' style='display:none;'></div>
      <div class='content'>
        <%= @node[:v_summary] ? show(@node, :v_summary) : show(@node, :v_text) %>
      </div>
      
      
      <div id='notes'>
        <%= render :partial=>'note/list', :locals=>{:list=>notes(:find=>:all_notes, :order=>'log_at DESC')} %>
      </div>
    </div>

    <div id="right">
      <% if contact = @node.contact %>
      <div id='contact'>
        <%= show(contact, :v_text   ) %>
      </div>
      <% end -%>
      <div id='documents'>
        <%= render :partial=>'document/list' %>
      </div>
      <div id='pages'>
        <%= render :partial=>'page/list'     %>
      </div>
    </div>
  </div>
  <%= css_edit %>
</body>
</html>