<div class='popup_action' id='drive'>
  <table>
    <tr>
      <td rowspan='3' class='edit'>
        <ul class='drive' id='groups'>
          <%= render :partial=>'node/rwp_groups'%>
        </ul>
        <ul class='drive' id='parent'>
          <%= render :partial=>'node/parent'    %>
        </ul>
      </td>
      <td id='search_box'>
        <label for='search'><%= trans("search")  %></label>
        <%= form_remote_tag(:update=>'search_results', 
                  :url=>{:controller=>'search', :action=>'find_in_edit', :id=>@node[:id]}, 
                  :loading => "Element.show('spinner')",
                  :complete => "Element.hide('spinner')") %>
        <input type='text' id='search' name='search'/>
        <%= end_form_tag %>
      </td>
    </tr>
    <tr>
      <td id='ajax-loader'><img alt="spinner" id="spinner" src="/images/ajax-loader.gif" style="display:none;" /></td>
    </tr>
    <tr>
      <td id="search_results">
      </td>
    </tr>
    <tr>
      <td colspan='2' id='links'>
        <%= render :partial=>'link/list'     %>
      </td>
    </tr>
    <tr>
      <td colspan='2' id='versions'>
        <%= render :partial=>'version/list'     %>
      </td>
    </tr>
    <tr>
      <td colspan='2' id='discussions'>
        <%= render :partial=>'discussion/list'     %>
      </td>
    </tr>
  </table>
</div>