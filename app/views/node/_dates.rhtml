<div id='dates_errors' class='errors'></div>
<ul>
<%= form_remote_tag(:with=>'dates', :url=>{:controller=>'node', :action=>'update', :id=>@node[:id], :rnd=>rnd}) %>
  <li><label><%= trans('event date') %></label><%= date_box('node', 'event_at') %></li>
  <li><label><%= trans('log date') %></label><%= date_box('node', 'log_at') %></li>
