if @page.new_record?
  page.replace_html 'add_page_form', :partial=>'form'
  page << "$('page_name').focus();"
else
  new_page = @page
  @page = Page.new
  page.insert_html :before, 'add_page', :partial=>"li", :locals=>{:li=>new_page}
  page.replace_html 'add_page_form', :partial=>'form'
  page << "$('page_name').focus();"
end
