if params[:attribute]
  page.replace_html params[:identifier], :partial => 'edit_attribute'
  page << "$('node_#{params[:attribute]}').focus();"
  page << "$('node_#{params[:attribute]}').select();"
else
  page.replace "#{params[:dom_id]}_#{@node.zip}", :file => fullpath_from_template_url + "_form.erb"
  page << "$('#{params[:dom_id]}_form_t').focusFirstElement();"
end