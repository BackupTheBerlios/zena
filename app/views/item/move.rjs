if @errors || !@item.errors.empty?
  page.replace_html 'parent_errors', :inline => @errors ? render_errors : error_messages_for('item')
else  
  page.replace_html 'parent', :partial=>'parent'
  page.replace_html 'messages', :inline=>"<div id='notice'>#{trans('item updated')}</div>"
  page.visual_effect :highlight, 'parent'
  page.visual_effect :fade, "notice", :duration => 3
end