<tr id='column<%= li[:id] %>'>
  <td class="adm_icon"><%= (li.new_record? || !li.errors.empty?) ? _('column_error_img') : link_to_remote( _('column_img'),
          :update =>"column#{li[:id]}",
          :url    => edit_column_path(li),
          :method => :get) %></td>
  <td class='ruby'><span class='spacer'><%= li.kpath[1..-1] + li.kpath[1..-1] %></span><span class='constant'><%= li.role.name %></span> <span class='text'>p.<%= li.ptype %></span> <span class='symbol'>:<%= li.name %><%= li.import_result ? " (#{li.import_result})" : ''%></span></td>
</tr>