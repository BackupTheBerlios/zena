<div id='content'>
  <h3><%= _('manage comments') %></h3>

  <ul class='comment' id='comments_list'>
    <%= render :partial=>'comments/li', :collection=>@comments %>
  </ul>

  <%= link_to _("Previous page"), { :page => @comment_pages.current.previous } if @comment_pages.current.previous %>
  <%= link_to _("Next page"), { :page => @comment_pages.current.next } if @comment_pages.current.next %>

  <div id='bin'>
    <%= render :partial=>'comments/bin' %>
  </div>
</div>

<div id='right'>
</div>